<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jingye.repository.TemporaryParkingRepository">

    <!-- 数据库字段 -->
    <sql id="temporaryParkingFields">
        tp_note
        , tp_time
        , tp_charge
        , id
    </sql>

    <!-- 对象属性 -->
    <parameterMap id="temporaryParkingParameterMap" type="com.jingye.entity.TemporaryParking">
        <parameter property="tpNote"/>
        <parameter property="tpTime"/>
        <parameter property="tpCharge"/>
        <parameter property="id"/>
    </parameterMap>

    <!-- 数据库字段与对象属性映射 -->
    <resultMap id="temporaryParkingResultMap" type="com.jingye.entity.TemporaryParking">
        <result property="tpNote" column="tp_note" />
        <result property="tpTime" column="tp_time" />
        <result property="tpCharge" column="tp_charge" />
        <result property="id" column="id" />
    </resultMap>

    <!-- 增加 -->
    <insert id="saveTemporaryParking" parameterMap="temporaryParkingParameterMap" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
          temporary_parking( <include refid="temporaryParkingFields"/> )
        VALUES ( ? , ? , ? , ?);
    </insert>

    <!-- 增加多条 -->
    <insert id="saveBatchTemporaryParking" parameterType="java.util.List">
        INSERT INTO
          temporary_parking( <include refid="temporaryParkingFields"/> )
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
              #{item.tpNote}
              ,#{item.tpTime}
              ,#{item.tpCharge}
              ,#{item.id}
            )
        </foreach>
        ;
    </insert>

    <!-- 获取所有 -->
    <select id="listTemporaryParking" resultMap="temporaryParkingResultMap">
        SELECT
          <include refid="temporaryParkingFields"/>
        FROM temporary_parking
        ORDER BY
           id DESC    </select>

    <!-- 根据条件获取多条 -->
    <select id="listTemporaryParkingByParam" parameterType="java.util.Map" resultMap="temporaryParkingResultMap">
        SELECT
          <include refid="temporaryParkingFields"/>
        FROM temporary_parking
        <where>
           <if test="tpNote != null and tpNote != ''"> AND tp_note=#{tpNote} </if>
           <if test="tpTime != null and tpTime != ''"> AND tp_time=#{tpTime} </if>
           <if test="tpCharge != null and tpCharge != ''"> AND tp_charge=#{tpCharge} </if>
           <if test="id != null and id != ''"> AND id=#{id} </if>
        </where>
        ORDER BY
           id DESC    </select>

    <!-- 根据条件删除多条 -->
    <delete id="deleteTemporaryParkingByParam" parameterMap="temporaryParkingParameterMap">
        DELETE FROM temporary_parking
        <where>
          <if test="tpNote != null and tpNote != ''"> AND tp_note=#{tpNote} </if>
          <if test="tpTime != null and tpTime != ''"> AND tp_time=#{tpTime} </if>
          <if test="tpCharge != null and tpCharge != ''"> AND tp_charge=#{tpCharge} </if>
          <if test="id != null and id != ''"> AND id=#{id} </if>
        </where>
        ;
    </delete>


    <!-- 根据主键修改 -->
    <update id="updateTemporaryParkingByKey" parameterMap="temporaryParkingParameterMap">
        UPDATE
          temporary_parking
        <trim prefix="SET" prefixOverrides=",">
          <if test="tpNote != null">, tp_note=#{tpNote}</if>
          <if test="tpTime != null">, tp_time=#{tpTime}</if>
          <if test="tpCharge != null">, tp_charge=#{tpCharge}</if>
          <if test="id != null">, id=#{id}</if>
        </trim>
        <where>
          AND id=#{id}
        </where>
        ;
    </update>

    <!-- 根据主键获取 -->
    <select id="getTemporaryParkingByKey" parameterType="java.util.Map" resultMap="temporaryParkingResultMap">
        SELECT
          <include refid="temporaryParkingFields"/>
        FROM temporary_parking
        <where>
          AND id=#{id}
        </where>
    </select>

    <!-- 根据主键删除 -->
    <delete id="deleteTemporaryParkingByKey" parameterType="java.util.Map">
        DELETE FROM temporary_parking
        <where>
          AND id=#{id}
        </where>
        ;
    </delete>

    <!-- 根据多个主键删除多条 -->
    <delete id="deleteBatchTemporaryParkingByKey" parameterType="java.util.List">
        DELETE FROM temporary_parking
          WHERE id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
        ;
    </delete>

    <!-- 根据多个主键获取 -->
    <select id="listTemporaryParkingByKey" parameterType="java.util.List" resultMap="temporaryParkingResultMap">
        SELECT <include refid="temporaryParkingFields"/>
        FROM temporary_parking
        WHERE id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>